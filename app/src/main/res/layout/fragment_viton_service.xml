<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.vitonhealth.android.login.VitonServiceFragment">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Push data"
        android:id="@+id/push_data_button"
        android:layout_marginTop="81dp"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:background="#007aff"
        android:textColor="#fff"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refresh Token Test"
        android:id="@+id/refresh_token_button"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/push_data_button"
        android:layout_alignStart="@+id/push_data_button"
        android:layout_alignEnd="@+id/push_data_button"
        android:textStyle="bold"
        android:background="#007aff"
        android:textColor="#fff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/push_data_response"
        android:id="@+id/server_response"
        android:layout_below="@+id/refresh_token_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:singleLine="false"
        android:autoText="false"
        android:background="@color/white"/>



</RelativeLayout>
